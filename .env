# No API Keys Required - Local LLM Version!
# This version uses only local Hugging Face models

# App Configuration
DEBUG=False
LOG_LEVEL=INFO

# Model Settings (Local Models)
USE_GPU=True  # Set to False if you don't have CUDA
CACHE_MODELS=True
MODEL_CACHE_DIR=./models_cache

# Hugging Face Models Configuration
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
STORY_MODEL=gpt2-medium
TITLE_MODEL=facebook/bart-base
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest

# Generation Settings
MAX_STORY_TOKENS=800
TEMPERATURE=0.8
TOP_P=0.95
TOP_K=50
REPETITION_PENALTY=1.1

# Image Generation Settings
POSTER_WIDTH=400
POSTER_HEIGHT=600
POSTER_QUALITY=95

# UI Settings
ENABLE_CREATIVE_MODE=True
DEFAULT_INTENSITY=5
SHOW_MODEL_INFO=True

# Performance Settings
BATCH_SIZE=1
NUM_WORKERS=1
ENABLE_CACHING=True
CACHE_TTL=3600